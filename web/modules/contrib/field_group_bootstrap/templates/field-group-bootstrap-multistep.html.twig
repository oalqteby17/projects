{% set classes = ['multistep'] %}
<div{{ attributes.addClass(classes) }}>
  {% if label is not empty and show_step_title %}
    <h5>{{ label }}</h5>
  {% endif %}

  {% if show_step_progress is not empty %}
  <div class="progress">
    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="50"
         class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar"
         style="width: 0%"></div>
  </div>
  {% endif %}

  <div class="steps-container">
    {{ children }}
  </div>
  <div class="d-flex justify-content-between">
    <button type="button" class="btn-prev btn btn-primary" style="display: none;"><i class="bi bi-chevron-left"></i> {{ back_button_text }}</button>
    <button type="button" class="btn-next btn btn-primary">{{ next_button_text }} <i class="bi bi-chevron-right"></i></button>
  </div>
</div>
