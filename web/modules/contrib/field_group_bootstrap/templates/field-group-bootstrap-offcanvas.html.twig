<div {{ attributes }}>
  <button type="button" class="btn {{ button.class }}" data-bs-toggle="offcanvas" data-bs-target="#{{ id }}" aria-controls="{{ id }}">
    {{ button.title }}
  </button>
  <div id="{{ id }}" class="offcanvas offcanvas-{{ placement }}" tabindex="-1" aria-labelledby="{{ id }}OffcanvasLabel" data-bs-scroll="true" data-bs-backdrop="false">
    <div class="offcanvas-header">
      {% if title %}
        <h5 class="offcanvas-title" id="{{ id }}OffcanvasLabel">{{ title }}</h5>
      {% endif %}
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="{{ 'Close'|t }}"></button>
    </div>
    <div class="offcanvas-body">
      {{ children }}
    </div>
  </div>
</div>
